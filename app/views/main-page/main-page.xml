<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar title="{{ message }}" />
  </Page.actionBar>
  <GridLayout rows="auto, auto" columns="*, *">
    <StackLayout orientation="horizontal" col="0" row="0" colSpan="2">
      <Button class="font-awesome status-{{ status }}" id="play-pause" text="Play" />
      <Button class="font-awesome" id="stop" text="Stop" />
    </StackLayout>

    <GridLayout rows="auto, *" row="1" col="0">
      <Label text="Wrapped Layout" horizontalAlignment="center" />
      <WrapLayout row="1" >
        <Button text="W-01" />
        <Button text="W-02" />
        <Button text="W-03" />
        <Button text="W-04" />
        <Button text="W-05" />
      </WrapLayout>
    </GridLayout>
  </GridLayout>
</Page>
